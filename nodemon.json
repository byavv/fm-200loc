{
    "env": {
        "NODE_ENV": "development",
        "DEBUG": "gateway, plugins:*, services:*",
        "ETCD_HOST": "localhost:4001"
    },
    "ext": "js",
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/**/node_modules",
        "/.vscode/*.*",
        "/test/*.*",
        "*.spec.*",
        "*.json",
        "/coverage",
        "/out"
    ],
    "verbose": true,
    "execMap": {
        "js": "node"
    },
    "watch": [
        "src/**/*.js",
        "drivers/**/*.js",
        "plugins/**/*js",
        "lib/**/*js",
        "src/**/*.json"
    ]
}