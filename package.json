{
  "name": "200loc-gate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "cross-env node ./src/server.js --log info --env production --n node1 --p 3001",
    "test": "cross-env NODE_ENV=test DEBUG=test istanbul cover node_modules/mocha/bin/_mocha -- -t 5000 -R spec test/*.spec.js plugins/**/test/*.spec.js",
    "test-cov": "cross-env NODE_ENV=test istanbul cover ./node_modules/mocha/bin/_mocha -- -R spec test/*.spec.js plugins/**/test/*.spec.js && cat ./coverage/lcov.info | ./node_modules/.bin/codecov",
    "dev": "cross-env DEBUG=gateway,plugins:* node ./src/server.js --ll debug --env development --n node1 --p 3001",
    "clean": "npm run clean:coverage && npm run clean:build",
    "clean:coverage": "rm -rf ./coverage",
    "clean:build": "rm -rf ./explorer/build/*",
    "clean:hard": "npm run clean:build && npm run clean:coverage && rm -rf node_modules",
    "docker:build": "docker build -t aksenchyk/fm-200loc:build .",
    "jsdoc": "cross-env ./node_modules/.bin/jsdoc -r -c ./jsdoc.conf.json"
  },
  "engines": {
    "node": ">= 6"
  },
  "jshintConfig": {
    "esversion": 6
  },
  "dependencies": {
    "async": "^2.0.1",
    "body-parser": "^1.15.2",
    "compression": "^1.0.3",
    "core-js": "^2.4.1",
    "cors": "^2.5.2",
    "cross-env": "^2.0.0",
    "debug": "^2.2.0",
    "etcd-registry": "^2.1.1",
    "helmet": "^1.3.0",
    "http-proxy": "^1.14.0",
    "http-proxy-rules": "^1.0.1",
    "killable": "^1.0.0",
    "lodash": "^4.13.1",
    "loopback": "^2.29.1",
    "loopback-boot": "^2.6.5",
    "loopback-component-explorer": "^2.4.0",
    "loopback-connector-mongodb": "^1.15.2",
    "loopback-connector-redis": "0.0.3",
    "loopback-datasource-juggler": "^2.39.0",
    "node-etcd": "^5.0.3",
    "redis": "^2.6.2",
    "request": "^2.75.0",
    "request-promise": "^4.1.1",
    "serve-favicon": "^2.0.1",
    "uuid": "^2.0.3",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "istanbul": "^0.4.3",
    "jsdoc": "^3.4.1",
    "jshint": "^2.5.6",
    "minimist": "^1.2.0",
    "mocha": "^2.5.2",
    "mocha-junit-reporter": "^1.11.1",
    "mocha-lcov-reporter": "^1.2.0",
    "sinon": "^1.17.4",
    "supertest": "^1.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/byavv/200Loc-gate.git"
  },
  "description": "api gateway server"
}
